{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "ignorePaths": [
    "**/deps/**",
    "**/node_modules/**",
    "**/vendor/**"
  ],
  "packageRules": [
    {
      "matchManagers": ["helm-values"],
      "enabled": false
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true
    }
  ]
}
